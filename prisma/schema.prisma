datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model DatabaseAgent {
  id     Int    @id @default(autoincrement())
  gender String
  color  String
  name   String
  role   String
}

model ChatEntry {
  id        Int      @id @default(autoincrement())
  sender    Int?
  receiver  Int?
  message   String
  timestamp DateTime @default(now())
}

model Conversation {
  id        Int      @id @default(autoincrement())
  agents    Int[]
  entries   Json[]
  timestamp DateTime @default(now())
}
